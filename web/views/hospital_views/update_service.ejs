<%- include("../include/header", { titulo: 'Health Road - Actualizacion Servicio' }) %>

   <body class="clinic_version">
      <div id="preloader">
         <img class="preloader" src="images/loaders/heart-loading2.gif" alt="">
      </div>
      <header>
         <div class="header-top wow fadeIn">
            <div class="container">
               <a class="navbar-brand" href="/Hospital">Health<img src="images/icon-logo.png" alt="image">Road -
                  Regresar</a>

            </div>
         </div>
      </header>
      <div id="getintouch" class="section wb wow fadeIn" style="padding-bottom:0;">
         <div class="container">
            <div class="heading">
               <span class="icon-logo"><img src="images/icon-logo.png" alt="#"></span>
               <h2>Actualizacion de Servicio</h2>
            </div>
         </div>
         <form id="ajax-contact" action="/service/update" method="post">
            <div class="container forms">
               <div class="contact-section">
                  <div class="form-contant">

                     <div class="row">
                        <div class="col-md-12">
                           <div class="form-group in_name">
                              <label> <i class="fas fa-hospital-symbol"></i> Nombre</label>
                              <input type="text" class="form-control" placeholder="Nombre" value="<%- service.name  %>"
                                 name="name" required="required">
                              <input hidden type="text" value="<%- service.name  %>" name="name_old">
                           </div>
                        </div>
                        <div class="col-md-12">
                           <div class="form-group in_email">
                              <label> <i class="fal fa-usd-circle"></i> Precio </label>
                              <input type="number" min="0" step="0.01" class="form-control"
                                 value="<%- service.price  %>" name="price" placeholder="Q." required="required">
                           </div>
                        </div>
                        <div class="col-md-12">
                           <div class="form-group in_email">
                              <label> <i class="far fa-tag"></i> Categoria </label>
                              <select name="category_name">
                                 <option></option>
                                 <% for(var i=0; i<categories.length; i++) {
                                    if(service.category_name==categories[i].name){ %>

                                    <option selected value="<%= categories[i].name %>">
                                       <%= categories[i].name %>
                                    </option>
                                    <% }else{ %>
                                       <option value="<%= categories[i].name %>">
                                          <%= categories[i].name %>
                                       </option>
                                       <%} } %>
                              </select>
                           </div>
                        </div>
                        <div class="col-md-12">
                           <div class="form-group in_message">
                              <label> <i class="fal fa-comment-medical"></i> Descripcion </label>
                              <textarea class="form-control" id="message" rows="5" name="description"
                                 placeholder="Descripcion" required="required"><%- service.description  %></textarea>
                           </div>

                           <div class="actions">
                              <button type="button" class="btn small submitButton" data-bs-toggle="modal"
                                 data-bs-target="#staticBackdrop">
                                 <i class="far fa-save"></i>
                                 Actualizar
                              </button>
                           </div>
                        </div>
                     </div>


                  </div>

               </div>

            </div>
            <%- include("../include/confirmation_message",{type: 'servicio'}) %>
         </form>
      </div>

      <%- include("../include/scripts") %>


   </body>

   </html>