<%- include("../include/header", { titulo: 'Health Road - Registro Servicio' }) %>

   <body class="clinic_version">
      <div id="preloader">
         <img class="preloader" src="images/loaders/heart-loading2.gif" alt="">
      </div>
      <header>
         <div class="header-top wow fadeIn">
            <div class="container">
               <a class="navbar-brand" href="/Hospital">Health<img src="images/icon-logo.png" alt="image">Road - Regresar</a>
   
            </div>
         </div>
      </header>
      <div id="getintouch" class="section wb wow fadeIn" style="padding-bottom:0;">
         <div class="container">
            <div class="heading">
               <span class="icon-logo"><img src="images/icon-logo.png" alt="#"></span>
               <h2>Registro de Servicio</h2>
            </div>
         </div>
         <div class="container forms">
            <div class="contact-section">
               <div class="form-contant">
                  <form id="ajax-contact" action="/service/register" method="post">
                     <div class="row">
                        <div class="col-md-12">
                           <div class="form-group in_name">
                              <label> <i class="fas fa-hospital-symbol"></i> Nombre</label>
                              <input type="text" class="form-control" placeholder="Nombre" name="name" required="required">
                           </div>
                        </div>
                        <div class="col-md-12">
                           <div class="form-group in_email">
                              <label> <i class="fal fa-usd-circle"></i> Precio </label>
                              <input type="number" min="0" step="0.01" class="form-control" name="price" placeholder="Q."   required="required">
                           </div>
                        </div>
                       
                      
                        <div class="col-md-12">
                           <div class="form-group in_message">
                              <label> <i class="fal fa-comment-medical"></i> Descripcion </label>
                              <textarea class="form-control" id="message" rows="5" name="description" placeholder="Descripcion"
                                 required="required"></textarea>
                           </div>

                           <div class="actions">
                              <input type="submit" value="Registrar" name="submit" id="submitButton" class="btn small"
                                 title="Submit Your Message!">
                           </div>
                        </div>
                     </div>

                  </form>
               </div>

            </div>

         </div>

      </div>

      <%- include("../include/scripts") %>


   </body>

   </html>